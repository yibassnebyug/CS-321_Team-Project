<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:colorPrimaryDark">@color/design_default_color_primary_dark</item>
    </style>

    <style name="Theme.CS321_TeamProject" parent="Base.Theme.CS321_TeamProject" />

    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowTitleSize">35dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="NoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:colorPrimaryDark">@color/design_default_color_primary_dark</item>
    </style>
</resources>